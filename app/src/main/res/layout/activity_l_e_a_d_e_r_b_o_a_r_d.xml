<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.main.LeaderBoardActivity">
<Toolbar
   android:title="LEADERBOARD"
    android:id="@+id/toolbar"
    android:titleTextAppearance="@style/TextAppearance.AppCompat.Large"
    android:titleTextColor="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:background="@android:color/black"
    >


    <Button
        android:id="@+id/submit_btn"
        android:layout_width="130dp"
        android:layout_height="20dp"
        android:layout_marginEnd="15dp"
        android:text="Submit"
        android:gravity="center"
        android:layout_gravity="right"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:background="@drawable/submit_shape"
        />
</Toolbar>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        app:tabTextAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:layout_below="@id/toolbar"
        />


    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewpager"
        android:layout_below="@id/tablayout"
        />


</RelativeLayout>